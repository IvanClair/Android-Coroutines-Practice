<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary Color -->
        <item name="colorPrimary">@color/colorPrimary</item>

        <!-- Secondary Color -->
        <item name="colorSecondary">@color/colorSecondary</item>

        <!-- Surface -->
        <item name="colorSurface">@color/colorSurface</item>

        <!-- Error -->
        <item name="colorError">@color/colorError</item>

        <!-- Background -->
        <item name="android:colorBackground">@color/colorBackground</item>

        <!-- StatusBar -->
        <item name="android:statusBarColor">?attr/colorSecondary</item>
    </style>

    <!--  TextView  -->
    <style name="MyTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="MyTextView.MyHeadline4" parent="MyTextView">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline4
        </item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MyTextView.MyHeadline6" parent="MyTextView">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline6
        </item>
    </style>

    <style name="MyTextView.MySubtitle1" parent="MyTextView">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle1
        </item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MyTextView.MyCaption" parent="MyTextView">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Caption
        </item>
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>
</resources>
